@page "/admin/works/companies/{View}"
@page "/admin/works/companies/{View}/{Uuid:guid}"

@inject NavigationManager Navigation;

@if(View == "list") {
    <CompanyList />
}
@if(Uuid != Guid.Empty)
{
    <DialogBox CloseUrl="@CloseDialogUrl">
        <DryErrorBoundary>
            <CompanyEdit Uuid="@Uuid" />
        </DryErrorBoundary>
    </DialogBox>
}

@code {

    [Parameter]
    public string View { get; set; } = string.Empty;

    [Parameter]
    public Guid Uuid { get; set; } = Guid.Empty;

    private string CloseDialogUrl => $"/admin/works/companies/{View}";

}
