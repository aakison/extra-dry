{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "DefaultScheme": "LocalAuthIssuer",
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [
          "https://localhost:7259",
          "http://localhost:5259"
        ],
        "ValidIssuer": "dotnet-user-jwts"
      }
    }
  },
  "Authorization": {
    "WorkOrder": {
      "RequiresOne": [
        {
          "Claim": {
            "Name": "super-admin"
          }
        },
        {
          "Claim":  {
            "Name": "works-coordinator",
            "Value": "{uri.tenant}"
          }
        },
        {
          "Claim": {
            "Name": "stakeholder",
            "Value": "{uri.tenant}"
          },
          "Attribute": {
            "Name": "AssignedUser",
            "Value": "{jwt.sub}"
          }
        }
      ]
    }
  }
}
