@namespace ExtraDry.Blazor
@using ExtraDry.Blazor.Internal

<CascadingValue Value="@PageQueryBuilder">
    @ChildContent
</CascadingValue>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// A page query that encloses this filter and other components.  This filter components will
    /// update the query based on the user interaction with the filter.
    /// </summary>
    [CascadingParameter]
    internal PageQueryBuilder PageQueryBuilder { get; set; } = new();

}
