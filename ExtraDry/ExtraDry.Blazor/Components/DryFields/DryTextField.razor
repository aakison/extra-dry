@namespace ExtraDry.Blazor.Components
@typeparam TModel
@inherits DryFieldBase<TModel>

<TextField CssClass="@CssClasses"
    Affordance="@ResolvedAffordance"
    Description="@ResolvedDescription"
    Icon="@ResolvedIcon" 
    Label="@ResolvedLabel" 
    Placeholder="@ResolvedPlaceholder" 
    ReadOnly="@ResolvedReadOnly"
    Value="@Value" 
    Validator="Validator"
    OnChange="HandleChange" 
    OnInput="HandleInput"
    OnValidate="HandleValidate"
    Size="@Property.Size" 
    MaxLength="@ResolvedMaxLength" 
    MemberName="@Property.Property.Name"
    MarkdownSupportType="@Property.MarkdownSupportType"
    />

