    Affordance="@ResolvedAffordance"
    Description="@ResolvedDescription"
    Icon="@ResolvedIcon" 
    Label="@ResolvedLabel" 
    Placeholder="@ResolvedPlaceholder" 
    ReadOnly="@ResolvedReadOnly"
    Value="@Value" OnChange="HandleChange" OnInput="HandleInput"
    Size="@Property.Size" MaxLength="@ResolvedMaxLength" 
    />

