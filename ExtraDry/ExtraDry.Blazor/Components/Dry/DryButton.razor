@namespace ExtraDry.Blazor
@implements IDisposable

@if(ResolvedCommand?.IsVisible() ?? false) {
    <Button CssClass="@CssClasses" Caption="@ButtonCaption" Title="@ButtonTitle" @attributes="@UnmatchedAttributes" 
        ShowIcon="@ShowIcon" ShowCaption="@ShowCaption" ShowAffordance="@ShowAffordance"
        Icon="@ResolvedCommand.Icon" Affordance="@ResolvedCommand.Affordance" Enabled="@ResolvedEnabled"
        Context="@ResolvedCommand.Context" Theme="@ResolvedCommand.Theme"
        @onclick="DoClick" />
}
