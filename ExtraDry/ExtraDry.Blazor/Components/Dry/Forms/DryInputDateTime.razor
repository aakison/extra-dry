@namespace ExtraDry.Blazor.Forms
@typeparam T
@inherits DryInputBase<T>

<div class="@CssClasses" @attributes="@UnmatchedAttributes">
    @if(ResolvedIcon != "") {
        <Icon CssClass="context" Key="@ResolvedIcon" />
    }
    <input class="value" title="@ResolvedTitle" type="@HtmlDisplayMode" value="@Value" readonly="@ReadOnly" @onchange="HandleChange" onkeydown="@DisableSpaceWhenReadOnlyHack" />
    @if(ResolvedAffordance != "" && !ReadOnly) {
        <div onclick="this.parentNode.getElementsByTagName('input')[0].showPicker()">
            <Icon CssClass="affordance" Key="@ResolvedAffordance" />
        </div>
    }
</div>
