@namespace ExtraDry.Blazor
@typeparam TItem

<div class="mini-card @SemanticThumbnail @SemanticSubtitle @CssClass">
    @if(ShowThumbnail) {
        <img class="thumbnail" src="@Thumbnail" />
    }
    <div class="titles">
        <span class="title @CssClass">@Title</span>
        @if(ShowSubtitle) {
            <span class="subtitle @CssClass">@Subtitle</span>
        }
    </div>
</div>
