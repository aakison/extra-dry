@namespace ExtraDry.Blazor.Components.Raw
@typeparam T

<div class="@CssClass">
  @foreach(var option in SelectedOptions) { 
    <div>
      @if(EditMode != EditMode.ReadOnly) { 
        <span @onclick="@(() => DeselectOption(option.Key))">@option.Key</span> 
      }
      @option.Display
    </div>
  }
  @if(!ReadOnly) { 
    <select @onchange="SelectOption">
      <option selected="@BlankSelected"></option>
      @foreach (var option in AvailableOptions) {
        <option value="@option.Key">@option.Display</option>
      }
    </select>
  }
</div>
 