@inject CrudService<Employee> EmployeeService
@inject NavigationManager Navigation

<h2>Employee</h2>
<DryForm ViewModel="@this" Model="@employee" FixedFieldsets="2" />

@code {

    [Parameter]
    public Guid Uuid { get; set; }

    private Employee? employee;

    protected override async Task OnInitializedAsync()
    {
        employee = await EmployeeService.RetrieveAsync(Uuid);
    }

    [Command(CommandContext.Primary, Name = "Save & Close")]
    public async Task SaveAsync(Employee employee)
    {
        await EmployeeService.UpdateAsync(Uuid, employee);
        Navigation.NavigateTo("/admin/works/employees/list");
    }

}
