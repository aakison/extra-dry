@namespace  Blazor.ExtraDry

@if(!string.IsNullOrWhiteSpace(Key)) {
<i class="@QualifiedIcon" />
}

@code {
    [CascadingParameter]
    protected ThemeInfo ThemeInfo { get; set; }

    [Parameter]
    public string Key { get; set; }

    private string QualifiedIcon => $"{ThemeInfo?.IconPrefix}{Key}";
}
