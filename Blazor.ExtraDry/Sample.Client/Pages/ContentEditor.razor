  ContentLayout content = new ContentLayout {
    Sections = {
      new ContentSection {
        Layout = SectionLayout.Double,
        Containers = {
          new ContentContainer {
            Html = "Hello Razor",
          },
          new ContentContainer {
            Html = "Hello Blazor",
            Alignment = ContentAlignment.Bottom,
          },
        }
      },
      new ContentSection {
        Layout = SectionLayout.Single,
        Containers = {
          new ContentContainer {
            Html = "Hello Razor",
          },
        }
      },
    }
  };

}
