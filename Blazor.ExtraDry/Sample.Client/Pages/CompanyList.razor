@page "/companies"
@inject IListService<Company> ListService;
@inject NavigationManager Navigation;

<h2>Companies</h2>

<CommandBar ViewModel="@this" />

<DryTable T="Company" ViewModel="@this" ItemsService="@ListService" />

@code {

    [Command(CommandContext.Alternate, Icon = "edit")]
    public void Edit(Company company)
    {
        Navigation.NavigateTo($"/companies/{company.UniqueId}");
    }

}
